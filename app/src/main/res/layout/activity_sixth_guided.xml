<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/items_background"
    tools:context=".GuidedAct.SixthGuided">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageView
            android:id="@+id/ivReturn"
            android:layout_width="38dp"
            android:layout_height="34dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.042"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.179"
            app:srcCompat="@drawable/baseline_arrow_back_24" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="282dp"
            android:layout_height="83dp"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="80dp"
            android:fontFamily="@font/amiko"
            android:gravity="center"
            android:text="Welcome to Android Development Guided Exercise"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="245dp">

        <CheckBox
            android:id="@+id/chkTwo"
            android:layout_width="203dp"
            android:layout_height="50dp"
            android:fontFamily="@font/amiko"
            android:text="Two"
            app:layout_constraintBottom_toTopOf="@+id/chkThree"
            app:layout_constraintEnd_toEndOf="@+id/chkOne"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/chkOne" />

        <CheckBox
            android:id="@+id/chkOne"
            android:layout_width="203dp"
            android:layout_height="50dp"
            android:fontFamily="@font/amiko"
            android:text="One"
            app:layout_constraintBottom_toTopOf="@+id/chkTwo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <CheckBox
            android:id="@+id/chkThree"
            android:layout_width="203dp"
            android:layout_height="50dp"
            android:fontFamily="@font/amiko"
            android:text="Three"
            app:layout_constraintBottom_toTopOf="@+id/chkFour"
            app:layout_constraintEnd_toEndOf="@+id/chkTwo"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/chkTwo" />

        <CheckBox
            android:id="@+id/chkFour"
            android:layout_width="203dp"
            android:layout_height="50dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/amiko"
            android:text="Four"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/chkThree"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/chkThree" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="131dp">

        <TextView
            android:id="@+id/tvResultGE6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnClickGE6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/buttons_background"
            app:layout_constraintEnd_toEndOf="@+id/tvResultGE6"
            app:layout_constraintStart_toStartOf="@+id/tvResultGE6"
            app:layout_constraintTop_toBottomOf="@+id/tvResultGE6"
            app:layout_constraintVertical_bias="0.229" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>