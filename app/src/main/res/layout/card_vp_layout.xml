<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="15dp"
    android:backgroundTint="@color/transparent">

    <LinearLayout
        android:id="@+id/card_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        android:backgroundTint="@color/transparent">

            <RelativeLayout
                android:layout_width="280dp"
                android:layout_height="390dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.5">

                <androidx.cardview.widget.CardView
                    android:id="@+id/bmo_body"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/Teal"
                    app:cardCornerRadius="15dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:id="@+id/bmo_screen"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="150dp"
                            android:orientation="horizontal"
                            android:padding="5dp"
                            tools:layout_editor_absoluteX="1dp"
                            tools:layout_editor_absoluteY="1dp">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/bmo_face"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:backgroundTint="@color/Pale_Mint_Green"
                                app:cardCornerRadius="15dp">

                                <TextView
                                    android:id="@+id/txt_display"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginHorizontal="20dp"
                                    android:layout_marginVertical="40dp"
                                    android:gravity="center"
                                    android:fontFamily="@font/poppins"
                                    android:text="Machine\nProblem 1"
                                    android:textAlignment="center"
                                    android:textColor="@color/black"
                                    android:textSize="40sp">
                                </TextView>

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/green_oval"
                            android:layout_width="73dp"
                            android:layout_height="43dp"
                            android:layout_marginStart="44dp"
                            android:layout_marginTop="12dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/bmo_screen"
                            app:srcCompat="@drawable/shape_green_oval" />

                        <ImageView
                            android:id="@+id/blue_oval"
                            android:layout_width="73dp"
                            android:layout_height="43dp"
                            android:layout_marginStart="44dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/green_oval"
                            app:srcCompat="@drawable/shape_blue_oval" />

                        <ImageView
                            android:id="@+id/mini_circle1"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginStart="48dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/blue_oval"
                            app:layout_constraintVertical_bias="0.481"
                            app:srcCompat="@drawable/shape_mini_circle" />

                        <ImageView
                            android:id="@+id/mini_circle2"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginTop="13dp"
                            android:layout_marginEnd="168dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/blue_oval"
                            app:layout_constraintVertical_bias="0.0"
                            app:srcCompat="@drawable/shape_mini_circle" />

                        <ImageView
                            android:id="@+id/triangle_img"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="60dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/bmo_screen"
                            app:srcCompat="@drawable/shape_triangle" />

                        <ImageView
                            android:id="@+id/square_img"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="28dp"
                            android:background="@color/Sky_Blue"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/triangle_img"
                            app:srcCompat="@drawable/shape_square" />

                        <ImageView
                            android:id="@+id/circle_img"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/square_img"
                            app:layout_constraintHorizontal_bias="0.507"
                            app:layout_constraintStart_toEndOf="@+id/blue_oval"
                            app:layout_constraintTop_toBottomOf="@+id/triangle_img"
                            app:layout_constraintVertical_bias="0.22"
                            app:srcCompat="@drawable/shape_circle" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

            </RelativeLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>