<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Layer 1: Background -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="15dp" /> <!-- Adjusted to match CardView corner radius -->
            <solid android:color="@color/Pale_Mint_Green" />
        </shape>
    </item>
    <!-- Layer 2: Outline -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="15dp" /> <!-- Adjusted to match CardView corner radius -->
            <stroke
                android:width="5dp"
                android:color="@color/black" />
        </shape>
    </item>
</layer-list>
